<div class="marketplace-main-container">

  <div class="marketplace-content">

    <h1>Marketplace</h1>
  </div>
    <div class="all-items-container">

    

      <% @products.each_with_index do |product, index| %>
        <div class="marketplace-card">
        <div class="card-top-box">
        <div class="marketplace-product-card-image">   
        <%= image_tag "#{product.find_image_name}" , class: 'marketplace-image-size' %>
        </div>
        </div>

        <div class="card-info">
        <p><%= product.category %> in : <%= product.location %></p> 

        <div class="gen-button-white"><%= button_to "details", product_path(product.id), method: :get %></div>

        </div>

        </div>              
      <% end %>

    </div>
    
  

</div>
